public class Main {
    public static void main(String[] args) {
        int ticketprice = 19000;
        int bonusprice = 20;
        int bonus = ticketprice / bonusprice;
        System.out.println("Привет! Благодарим вас за выбор нашей авиакомпании! Ваш бонус за покупку билета составляет:"+ bonus +" милей");
    }
}